<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@System.Web.HttpUtility.HtmlDecode(ViewData["Title"]!=null?ViewData["Title"] + " - Chan Can Code" : "Chan Can Code")</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <meta name="title" content="@(ViewData["Title"]!=null? @$"{ViewData["Title"].ToString()} - Chan Can Code" : "Chan Can Code")"/>
    <meta name="og:title" content="@(ViewData["Title"]!=null? @$"{ViewData["Title"].ToString()} - Chan Can Code" : "Chan Can Code")"/>
    <meta name="description" content="@System.Web.HttpUtility.HtmlDecode(ViewData["Description"] != null ? ViewData["Description"].ToString() : "一個.net為主的編程部落格，分享站主所學到的一切編程知識，有時也有實倉投資紀錄、徵友公告、求職資訊 (笑")" ; />
    <meta name="og:description" content="@System.Web.HttpUtility.HtmlDecode(ViewData["Description"] != null ? ViewData["Description"].ToString() : "一個.net為主的編程部落格，分享站主所學到的一切編程知識，有時也有實倉投資紀錄、徵友公告、求職資訊 (笑")" ; />
    <meta name="keywords" content="@(ViewData["Keywords"]!= null? ViewData["Keywords"].ToString() :"C#, hk programmer, coding blog")" />
    <meta name="og:keywords" content="@(ViewData["Keywords"]!= null? ViewData["Keywords"].ToString() :"C#, hk programmer, coding blog")" />



</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Blog" asp-action="Index">Chan Can Code</a>
                <small style="align-self:flex-end">a blog of daily coding and life.</small>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Chan Can Code - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="l">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
